{{#each-in lists as |listName|}}
  <div class="col-md-4 card">
    <h2>{{listName}}</h2>
      {{!-- onClick evt from new-list-item triggers show description action and passes selected list item to the main app --}}
      {{new-list-item onClick=(action "showDescription")}}
  </div>
{{/each-in}}

{{#if showInput}}
  {{input class="add-new-list" value=listName enter="addList" placeholder="New list name" autofocus=true}}
{{/if}}

<button class="add-new-list btn" {{action "newListInput"}}>Add List...</button>
{{yield}}