{{#bs-modal-simple title=itemName}}
  {{#bs-form formLayout="horizontal" model=this onSubmit=(action "closeModal" itemName=itemName)}}
    {{textarea value=description cols="75" rows="6" property="description"}}
    {{bs-button defaultText="Save" type="primary" buttonType="submit" onClick=(action "closeModal" itemName=itemName)}}
    {{bs-button defaultText="Delete" type="danger" onClick=(action "closeModal" itemName=itemName)}}
  {{/bs-form}}
{{/bs-modal-simple}}

{{yield}}
